{{!< default}}
{{#post}}
  <article class="gh-article {{post_class}}">
    <header class="gh-header gh-canvas">
      <span class="gh-post-meta">
        <time datetime="{{date format="YYYY.MM.DD"}}">{{date format="YYYY.MM.DD"}}</time>
      </span>
      <h1 class="gh-title">{{title}}</h1>
      {{#if feature_image}}
        <img class="gh-feature-image" src="{{feature_image}}" alt="{{title}}" />
      {{/if}}
    </header>
    <div class="gh-content gh-canvas">
      {{content}}
    </div>
    <footer class="gh-footer gh-canvas">
      <hr/>
      <div class="gh-post-authors">
        Written by {{#foreach authors}}<a href="{{url}}">{{name}}</a>{{#unless @last}},&nbsp;{{/unless}}{{/foreach}}
      </div>
      <div class="gh-post-tags">
        {{#foreach tags}}<a class="tag" href="{{url}}">{{name}}</a>{{/foreach}}
      </div>
    </footer>
  </article>
{{/post}}